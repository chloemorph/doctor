{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "inlineSources": false,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "lib": [
      "DOM",
      "ES2015"
    ],
    "paths": {
      "@commands": ["src/commands"],
      "@helpers": ["src/helpers"],
      "@models": ["src/models"],
      "@utils": ["src/utils"]
    }
  },
  "include": [
    "src/**/*.ts"   
  ],
  "exclude": [
    "node_modules"
  ]
}
